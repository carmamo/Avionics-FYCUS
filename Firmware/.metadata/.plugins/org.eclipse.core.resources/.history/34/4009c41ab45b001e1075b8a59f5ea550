#define

#define OLED_ADDR	0x78 // OLED slave address in 7 bit = 0x3C

/*
 * VARIABLES
 */


/*
 * TYPEDEF STRUCTS
 */

typedef struct
{
	uint16_t solar_array_1;
	uint16_t solar_array_2;
	uint16_t solar_array_3;
	uint16_t solar_array_4;
	float temp;
	uint16_t battery_voltage;
	uint16_t battery_temperature;
	uint16_t charge_status;
} EPS_Telemetry;


/*
 * FUNCTION PROTOTYPES
 */

/*
